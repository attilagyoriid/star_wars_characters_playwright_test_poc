pipeline {
    
    environment {
        HOME = '.'  
        CI = 'true'
        TEST_DIR = 'playwright-test'
        LOG_FILE = 'jenkins.log'
        GITHUB_SSH_KEY = credentials('github credentials')
        GIT_REPO_URL = 'git@github.com:attilagyoriid/star_wars_characters_playwright_test_poc.git'
        GIT_BRANCH = 'main'
        WORKSPACE = "${env.WORKSPACE ?: '/workspace'}"
    }

    stages {
        stage('Print Environment Variables') {
            steps {
                script {
                    echo "Listing all Jenkins environment variables..."
                    env.each { key, value ->
                        echo "${key} = ${value}"
                    }
                }
            }
        }
        stage('List Files') {
            steps {
                sh 'ls -la'
            }
        }
    }
}