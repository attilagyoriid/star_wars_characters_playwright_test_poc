pipeline {
    agent {
        docker {
        image 'mcr.microsoft.com/playwright:v1.40.0-focal'
            args """
                --ipc=host 
                -e CI=true
                -v /var/run/docker.sock:/var/run/docker.sock
            """
            }
    }
    stages {
        stage('Test') {
            steps {
                sh 'node --version'
            }
        }
    }
}

