pipeline {
    agent {
        docker {
            image 'node:23.8.0'
            args '''
                --ipc=host
                -e CI=true
            '''
        }
    }

    environment {
        HOME = '.'
        CI = 'true'
        TEST_DIR = '/playwright-test'
        LOG_FILE = 'jenkins.log'
    }

    stages {
        stage('Checkout Code') {
            steps {
                script {
                    echo 'Checkout Code starts...'
                    git branch: 'main', url: 'https://github.com/attilagyoriid/star_wars_characters_playwright_test_poc.git'
                    echo 'Checkout Code ends...'
                }
            }
        }
        stage('List Working Directory') {
            steps {
                        script {
                            echo 'List Working Directory starts...'
                            dir(env.TEST_DIR) {
                                sh 'ls -a'
                            }
                            echo 'List Working Directory ends...'
                        }
            }
        }

        stage('Install Dependencies') {
            steps {
                script {
                    echo 'Install Dependencies starts...'
                     dir(env.TEST_DIR) {
                        sh 'npm ci'
                     }
                    echo 'Install Dependencies ends...'
                }
            }
        }

        stage('Install Playwright') {
            steps {
                script {
                    echo 'Install Playwright starts...'
                    dir(env.TEST_DIR) {
                        sh 'npm install'
                        sh 'npx playwright install'
                    }
                    echo 'Install Playwright ends...'
                }
            }
        }

        stage('Run Playwright Tests') {
            steps {
                script {
                    echo 'Run Playwright Tests starts...'
                    dir(env.TEST_DIR) {
                        sh 'npm run test:api'
                    }
                    echo 'Run Playwright Tests ends...'
                }
            }
        }

        stage('Publish Playwright Report') {
            steps {
                script {
                    echo 'Publish Playwright Report starts...'
                    dir(env.TEST_DIR) {
                            sh 'npx playwright show-report'
                    }
                    echo 'Publish Playwright Report ends...'
                }
            }
        }
    }

    post {
        always {
                publishHTML([
                    allowMissing: false,
                    alwaysLinkToLastBuild: true,
                    keepAll: true,
                    reportDir: 'playwright-test/playwright-report',
                    reportFiles: 'playwright-test/index.html',
                    reportName: 'Playwright Report',
                    reportTitles: ''
                ])
        }
        failure {
            script {
                echo 'Tests failed. Check the Playwright report.'
            }
        }
    }
}

