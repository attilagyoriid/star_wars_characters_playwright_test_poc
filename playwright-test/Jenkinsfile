pipeline {
    agent {
        docker {
            image 'node:18'  // Run inside Node.js container
            args '--user root'
        }
    }
    stages {
        stage('Build') {
            steps {
                sh 'node -v'  // Check Node.js version
            }
        }
        stage('Test') {
            steps {
                sh 'echo Running tests...'  // Replace with real test commands
            }
        }
    }
}

